{
  "private": true,
  "scripts": {
    "dev": "bun velite --watch & next dev",
    "build": "bun download-themes && next telemetry disable && bun velite build && next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "node ./scripts/setup.mjs && bun download-themes",
    "clean": "rimraf .next && rimraf dist && rimraf out && rimraf .velite",
    "update-deps": "npx --yes npm-check-updates -u && bun i",
    "download-themes": "node ./scripts/download-themes.mjs",
    "prune-code": "ts-prune -i '.next|.velite|src/app'",
    "postinstall": "is-ci || husky install",
    "analyze": "ANALYZE=true bun run build"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.2",
    "next": "^14.2.1-canary.0",
    "next-themes": "0.3.0",
    "react": "^18.2.0",
    "react-compare-slider": "^3.0.1",
    "react-dom": "^18.2.0",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@neondatabase/serverless": "^0.9.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.77",
    "@types/react-dom": "^18.2.25",
    "@types/xml": "^1.0.11",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "autoprefixer": "^10.4.19",
    "colord": "^2.9.3",
    "cssnano": "^6.1.2",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.8",
    "eslint": "8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "million": "^3.0.6",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react-twc": "^1.4.1",
    "react-tweet": "^3.2.1",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.13.1",
    "rehype-slug": "^6.0.0",
    "remark-smartypants": "^2.1.0",
    "remark-squeeze-paragraphs": "^6.0.0",
    "remark-unwrap-images": "^4.0.0",
    "sass": "^1.75.0",
    "shiki": "^1.3.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "^3.4.3",
    "tailwindcss-hocus": "^0.0.7",
    "ts-prune": "^0.10.3",
    "typescript": "^5.4.5",
    "velite": "^0.1.0-beta.14",
    "xml": "^1.0.1"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "semi": true
  }
}
